{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "Poverty Rate by State in Malaysia (2022)",
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_map/js/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/favelia/3179/main/hies_state.csv"
            },
            "key": "state",
            "fields": ["income_mean", "income_median", "expenditure_mean", "gini", "poverty"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "poverty",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {"scheme": "reds"}
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "income_mean", "type": "quantitative", "title": "Mean Income"},
          {"field": "income_median", "type": "quantitative", "title": "Median Income"},
          {"field": "expenditure_mean", "type": "quantitative", "title": "Mean Expenditure"},
          {"field": "gini", "type": "quantitative", "title": "Gini Index"},
          {"field": "poverty", "type": "quantitative", "title": "Poverty Rate (%)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_map/js/ne_110m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "stroke": "lightgray"}
    }
  ]
}
